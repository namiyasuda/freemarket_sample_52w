.search
  .search__sort
    %select
      %option{value: "",selected: "selected",} 並び替え
      %option 価格の安い順
      %option 価格の高い順
      %option 出品の古い順
      %option 出品の新しい順
      %option いいね!の順
  .search__details
    %h3 詳細検索
    .search__details--form-group
      %label.search__details--list
        %i.fa.fa-plus
        %span キーワードを追加する
      %input.input-basic{placeholder: "値下げ"}
    .search__details--form-group
      %label.search__details--list
        %i.fa.fa-list
        %span カテゴリーを選択する
      .select-wrap
        %select.select-basic
          %option{:value => ""} すべて
          %option レディース
          %option メンズ
          %option ベビー・キッズ
    .search__details--form-group
      %label.search__details--list
        %i.fa.fa-tag
        %span ブランド名から探す
      %input.input-basic{placeholder: "例）シャネル", :value => ""}/
    .search__details--form-group
      %label.search__details--list
        %i.fa.fa-compress
        %span サイズを指定する
      .select-wrap
        %select.select-basic
          %option{:value => ""} すべて
          %option レディース
          %option メンズ
          %option ベビー・キッズ
    .search__details--form-group
      %label.search__details--list
        %i.fa.fa-money
        %span 価格
      .select-wrap
        %i.icon-arrow-bottom
        %select.select-basic
          %option{:value => ""} 選択してください
          %option
            300 ~ 1000
          %option
            1000 ~ 5000
          %option
            5000 ~ 10000
    .search__details--form-group
      %label.search__details--list
        %i.fa.fa-star
        %span 商品の状態
      %div
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name すべて
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name 新品、未使用
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name 未使用に近い
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name 目立った傷や汚れなし
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name やや傷や汚れあり
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name 傷や汚れあり
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name 全体的に状態が悪い
    .search__details--form-group
      %label.search__details--list
        %i.fa.fa-truck
        %span 配送料の負担
      %div
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name すべて
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name 着払い(購入者負担)
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name 送料込み(出品者負担)
    .search__details--form-group
      %label.search__details--list
        %i.fa.fa-shopping-cart
        %span 販売状況
      %div
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name すべて
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name 販売中
        .check
          %input.check__box{type: "checkbox"}
          %label.check__name 売り切れ
    .search__details__btn
      %div.search__details__btn--clear クリア
      %div.search__details__btn--complete 完了
